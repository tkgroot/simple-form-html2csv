- const id = "adminModal"

div(id=id tabindex="-1" role="dialog" aria-labelledby=id aria-hidden="true").modal.fade
  div(role="document").modal-dialog
    .modal-content
      .modal-header
        h5(id=id).modal-title Admin Area
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      form(novalidate="")
        .modal-body
          label(for="inputEmail").sr-only Email address
          input(type="email" id="inputEmail" placeholder="Email address" required="").form-control
          label(for="inputPassword").sr-only Password
          input(type="password" id="inputPassword" placeholder="Password" required="").form-control

          //- button(type="submit").btn.btn-lg.btn-primary.btn-block Sign in
        .modal-footer
          button(type="button" data-dismiss="modal").btn.btn-secondary Close
          button(type="submit").btn.btn-primary Login
